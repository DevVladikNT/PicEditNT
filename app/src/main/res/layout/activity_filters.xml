<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".FiltersActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/BlackWhite"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop"
                        android:src="@drawable/black_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="BlackWhite"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Circuit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circuit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_info_bottom"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Circuit"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ColorShifts"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop"
                        android:src="@drawable/color_shifts" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_info_bottom"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="ColorShifts"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Defocusing"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defocusing" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_info_bottom"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Defocusing"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Cyberpunk"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cyberpunk" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_info_bottom"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Cyberpunk"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Pixel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pixel"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_info_bottom"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Pixel"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/sdf"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_info_bottom"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="sdf"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_info_bottom"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/MyFilter"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="setFilter"
                        android:scaleType="centerCrop"
                        android:src="@drawable/my_filter" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_info_bottom"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="MyFilter"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>