<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_info_bottom"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/BlackWhite"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="setFilter"
                    android:scaleType="centerCrop"
                    android:src="@drawable/black_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="BlackWhite"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_info_bottom"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ColorShifts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="setFilter"
                    android:scaleType="centerCrop"
                    android:src="@drawable/color_shifts" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_info_bottom"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="ColorShifts"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_info_bottom"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Cyberpunk"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="setFilter"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cyberpunk" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_info_bottom"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Cyberpunk"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_info_bottom"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Defocusing"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="setFilter"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defocusing" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_info_bottom"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Defocusing"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_info_bottom"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Rainbow"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="setFilter"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rainbow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_info_bottom"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Rainbow"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_info_bottom"
                android:elevation="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/CircleGeneration"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:onClick="setFilter"
                    android:scaleType="centerCrop"
                    android:src="@drawable/circle_generation" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_info_bottom"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Generation"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>