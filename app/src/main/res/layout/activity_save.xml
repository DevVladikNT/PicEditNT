<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical"
    tools:context=".SaveActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:background="@drawable/buttons_style_p"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/savePhoto1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="@color/dayColorAccent"
                android:minHeight="50dp"
                android:onClick="saveInCloud"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/savePhoto2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="@color/dayColorAccent"
                android:minHeight="50dp"
                android:onClick="saveInCloud"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/savePhoto3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="@color/dayColorAccent"
                android:minHeight="50dp"
                android:onClick="saveInCloud"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/savePhoto4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="@color/dayColorAccent"
                android:minHeight="50dp"
                android:onClick="saveInCloud"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/savePhoto5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/dayColorAccent"
                android:minHeight="50dp"
                android:onClick="saveInCloud"
                android:scaleType="fitXY" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="8dp"
        android:background="@drawable/buttons_style_p"
        android:elevation="4dp"
        android:gravity="center"
        android:onClick="saveImage"
        android:text="Save in gallery"
        android:textSize="20sp" />

</LinearLayout>